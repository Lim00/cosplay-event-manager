// prisma/schema.prisma

generator client {
  provider  = "prisma-client-js"
}

datasource db {
  provider  = "sqlite" // 개발용 (향후 postgresql로 변경)
  url       = "file:./dev.db"
}

// 1.NextAuth 필수 모델 (유저, 계정, 세션)
model Account {
  id                  String @id @default(cuid())
  userId              String
  type                String  
  provider            String
  providerAccountId   String
  referesh_token      String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // 2. 나중에 추가할 백업 데이터 (JSON 형태로 통째로 저장)
  backups       Backup[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 3. 백업 데이터 저장소
model Backup {
  id        String   @id @default(cuid())
  userId    String
  data      String   // Dexie.js 데이터를 JSON 문자열로 저장
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}